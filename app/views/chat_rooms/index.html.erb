<div class="container mt-4">
  <div class="container">
    <div class="row justify-content-md-center">
    <div class="col-md-8">
      <div class="card text-center mt-4 mb-4">
        <div class="card-body">
          Welcome to ChatChat, <b><%= current_user.name %></b>!
        </div>
      </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-4">Chat Rooms</h1>
    <%= link_to 'Create new Chat Room', new_chat_room_path, class: 'btn btn-primary' %>
  </div>

  <div class="list-group">
    <% @chat_rooms.each do |chat_room| %>
      <div class="list-group-item list-group-item-action">
        <%= link_to chat_room.name, chat_room_path(chat_room) %>
      </div>
    <% end %>
  </div>
</div>
