<div data-controller="chat-room" data-chat-room-id="<%= @single_room.id %>">
  <div class="container mt-4">
    <div class="mb-3">
      <h1>Чат: <%= @single_room.name %></h1>
      <h2>Участники:</h2>
      <ul>
        <% @single_room.users.each do |user| %>
          <li><%= user.name %></li>
        <% end %>
      </ul>
      <%= link_to "Leave", root_path %>
    </div>

    <div class="messages mb-4 col-12"> <!-- Adjust the height accordingly -->
      
      <%= turbo_stream_from @single_room %>
      <div class="messages-inner"  id="messages">
      </div>

    </div>

    <div class="d-flex justify-content-evenly">
      <%= render partial: 'layouts/new_message_form' %>
    </div>

